# Database Configuration
DATABASE_URL=sqlite:///./podcast_task_manager.db

# Google Calendar Integration
# Set GOOGLE_CALENDAR_ENABLED=true to enable calendar integration
GOOGLE_CALENDAR_ENABLED=false

# Google Calendar ID (use "primary" for main calendar, or specific calendar ID)
GOOGLE_CALENDAR_ID=primary

# Path to Google Service Account credentials JSON file
# Download from Google Cloud Console: APIs & Services > Credentials > Service Account
GOOGLE_CREDENTIALS_PATH=./credentials/google-service-account.json

# Service Account Email (optional, for reference)
# This is the email address of the service account (found in the JSON file)
GOOGLE_SERVICE_ACCOUNT_EMAIL=

# Timezone for calendar events (IANA timezone name)
# Examples: Asia/Jerusalem, America/New_York, Europe/London
GOOGLE_CALENDAR_TIMEZONE=Asia/Jerusalem

# Number of days ahead to sync when using sync_calendar_to_database
GOOGLE_CALENDAR_LOOKAHEAD_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
